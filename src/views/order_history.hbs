<div class="container">
    <h2 class="text-center text-success mt-4"><b>Order History</b></h2>
    <form action="" method="post">
        <div class="mt-2">
            <label for="txtNameOrder" class="form-label">Full Name:</label>
            <input type="text" class="form-control" id="txtNameOrder" name="name" placeholder="Enter name">
        </div>
        <div class="mt-2">
            <label for="txtPhoneOrder" class="form-label">Phone Number:</label>
            <input type="tel" class="form-control" id="txtPhoneOrder" name="phone" placeholder="Enter phone number">
        </div>

        <div class="mt-2">
            <div class="row">
                <div class="col-md-4">
                    <label for="txtProvinceOrder" class="form-label">City</label>
                    <select id="txtProvinceOrder" class="form-select" name="province">
                    </select>
                </div>

                <div class="col-md-4">
                    <label for="txtDistrictOrder" class="form-label">Dicstrict</label>
                    <select id="txtDistrictOrder" class="form-select" name="dicstrict">
                        <option selected></option>
                    </select>
                </div>

                <div class="col-md-4">
                    <label for="txtWardOrder" class="form-label">Ward</label>
                    <select id="txtWardOrder" class="form-select" name="ward">
                        <option selected></option>
                    </select>
                </div>
            </div>
        </div>

        <div class="mt-2">
            <label for="txtAddressOrder" class="form-label">Address:</label>
            <input type="text" class="form-control" id="txtAddressOrder" placeholder="Enter address ..." name="address">
        </div>

        {{!-- method payment --}}
        <div class="border p-4 mt-4">
            <div>Payment method</div>
            <div class="form-check d-flex align-items-center">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1"
                    style=" -align: middle;">
                <label class="form-check-label ms-3" for="flexRadioDefault1">
                    <img src="./imgs/static/momo.png" height="50px" /> Momo Wallet
                </label>
            </div>
            <div class="form-check d-flex align-items-center">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                <label class="form-check-label ms-3" for="flexRadioDefault2">
                    <img src="./imgs/static/cast.jpg" height="50px" /> Cast
                </label>
            </div>
        </div>
        {{!-- End: Method payment --}}

        <div class="form-group mt-4">
            <label for="note">Note:</label>
            <textarea class="form-control" rows="5" id="txtNoteOrder" name="note"
                placeholder="Message for Leaf Book here ..." id="note"></textarea>
        </div>

        <div class="form-group mt-4">
            <label for="voucher">Voucher:</label>
            <input type="text" class="form-control" id="voucher" oninput="this.value = this.value.toUpperCase()"
                placeholder="Enter discount" name="voucher" />
        </div>
        <div id="list_product">
            <div class="row mb-4 mb-md-3 border-bottom border-dark pb-3 mt-5">
                <div class="col-md-8 col-9 fw-bold font-table-header">List Book ({{length orderDetails.length}} books)</div>
                <div class="col-md-2 d-none d-md-block text-center fw-bold font-table-header">Quantity</div>
                <div class="col-md-2 col-3 text-center fw-bold font-table-header">Total</div>
            </div>
            {{#each orderDetails}}
            <div class="row mb-4 mb-md-3">
                <div class="col-md-8 col-9">
                    <div class="row">
                        <div class="col-1 align-self-center">
                            <input type="checkbox" name="select" class="form-check-input" id="checkAll"
                                style="transform: scale(2);">
                        </div>
                        <div class="col-md-2 col-3">
                            <img src="../imgs/static/b007.jpg" alt="Image"
                                style="height: 15vh; width: 90%;object-fit: cover;">
                        </div>
                        <div class="col d-flex flex-column justify-content-md-between justify-content-around">
                            <b class="h6"><a href="/product/id" class="">The Story Of My Life</a></b>
                            <div class="d-md-none d-block">
                                <button class="btn btn-success" type="button">-</button>
                                <span>2</span>
                                <button class="btn btn-success" type="button">+</button>
                            </div>
                            <div class="text-danger h6">100$</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2 d-none d-md-block text-center align-self-center">
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-success" type="button">-</button>
                        <span class="mx-md-3">2</span>
                        <button class="btn btn-success" type="button">+</button>
                    </div>
                </div>
                <div class="col-md-2 col-3 text-center align-self-center text-danger h6">100$</div>
            </div>
            {{/each}}

        </div>
    </form>
    <div class="text-danger" id="errPayment"></div>
    <div class="row">
        <button class="btn btn-success mb-5 mr-3 ml-3" id="btnConfirmPay">
            Confirm Payment
        </button>
    </div>
</div>
