<div class="container">
    <div class="container pt-4 pb-4 bg-light">
        <div id="carouselBasicExample" class="carousel slide carousel-fade" data-mdb-ride="carousel"
            data-mdb-interval="2000">
            <div class="carousel-indicators">
                <button type="button" data-mdb-target="#carouselBasicExample" data-mdb-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-mdb-target="#carouselBasicExample" data-mdb-slide-to="1"
                    aria-label="Slide 2"></button>
                <button type="button" data-mdb-target="#carouselBasicExample" data-mdb-slide-to="2"
                    aria-label="Slide 3"></button>
                <button type="button" data-mdb-target="#carouselBasicExample" data-mdb-slide-to="3"
                    aria-label="Slide 4"></button>
                <button type="button" data-mdb-target="#carouselBasicExample" data-mdb-slide-to="4"
                    aria-label="Slide 5"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="../imgs/static/slider_1.jpg" class="d-block w-100" />
                </div>
                <div class="carousel-item">
                    <img src="../imgs/static/slider_2.jpg" class="d-block w-100" />
                </div>
                <div class="carousel-item">
                    <img src="../imgs/static/slider_3.png" class="d-block w-100" />
                </div>
                <div class="carousel-item">
                    <img src="../imgs/static/slider_4.jpg" class="d-block w-100" />
                </div>
                <div class="carousel-item">
                    <img src="../imgs/static/slider_5.jpg" class="d-block w-100" />
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-mdb-target="#carouselBasicExample"
                data-mdb-slide="prev">
                <span class="bi bi-chevron-left" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-mdb-target="#carouselBasicExample"
                data-mdb-slide="next">
                <span class="bi bi-chevron-right" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

    <!-- Content trend -->
    <div class="container text-center justify-content-center mt-5">
        <div class="row">
            <span class="col-md-3 d-none d-md-block text-success m-4" style="border-top: 1px solid;"></span>
            <span style="border: 1px solid; border-radius: 4px;" class="col p-3 text-success h5"> <img
                    src="../imgs/static/trend-icon.png" width="35px"> <b>BEST SELLING BOOKS IN MONTH</b> <img
                    src="../imgs/static/trend-icon.png" width="35px"></span>
            <span class="col-3 d-none d-md-block text-success m-4" style="border-top: 1px solid;"></span>
        </div>
        <div class="row" id="trendProducts">
            {{#each products}}
            <section class="col-md-3 p-2 col-6">
                <div class="card">
                    <a href="{{append " /product/" (basename _links.book.href)}}"
                        class="text-decoration-none text-dark">
                        <img src="{{bookImage}}" class="card-img-top px-2 py-1" alt="Image Product" style="height: 45vh;">
                        <div class="card-body pb-0">
                            <h5 class="card-title d-flex justify-content-center" style="font-size: 0.9rem; ">
                                <p>{{bookTitle}}</p>
                            </h5>
                            <div class="d-flex justify-content-between">
                                <p class="fw-bold">{{toFixed (multiply bookPrice (divide (minus 100 bookDiscount) 100))
                                    2}}</p>
                                <p class="text-muted"><s>{{bookPrice}}</s></p>
                            </div>
                        </div>
                        <div class="card-body d-flex justify-content-center pt-0">
                            <button type="button" class="btn btn-danger" onclick="addToCart('{{basename _links.book.href}}', event)"><i
                                    class="fas fa-cart-plus me-2"></i></i>Add to cart</button>
                        </div>
                    </a>
                </div>
            </section>
            {{/each}}
        </div>
    </div>

    <!-- Fun -->
    <div class="row">
        <img src="../imgs/static/fun-text.png">
    </div>
    <div class="row">
        <div class="col text-center">
            <img src="../imgs/static/barack-obama.jpg" style="border-radius: 50%; margin-top: -60px;" width="110px">
        </div>
    </div>

    <!-- Content sales -->
    <div class="container text-center justify-content-center pt-5" id="contentSales">
        <div class="row">
            <span class="col-3 d-none d-md-block text-danger m-4" style="border-top: 1px solid;"></span>
            <span style="border: 1px solid; border-radius: 4px;" class="col p-3 text-danger h5"> <img
                    src="../imgs/static/sale-icon.webp" width="35px"> <b>SHOCKING DISCOUNT BOOKS</b> <img
                    src="../imgs/static/sale-icon.webp" width="35px"></span>
            <span class="col-3 d-none d-md-block text-danger m-4" style="border-top: 1px solid;"></span>
        </div>
        <div class="row" id="saleProducts">
            {{#each products}}
            <section class="col-md-3 p-2 col-6">
                <div class="card">
                    <a href="{{append " /product/" (basename _links.book.href)}}"
                        class="text-decoration-none text-dark">
                        <img src="{{bookImage}}" class="card-img-top px-2 py-1" alt="Image Product" style="height: 45vh;">
                        <div class="card-body pb-0">
                            <h5 class="card-title d-flex justify-content-center" style="font-size: 0.9rem; ">
                                <p>{{bookTitle}}</p>
                            </h5>
                            <div class="d-flex justify-content-between">
                                <p class="fw-bold">{{toFixed (multiply bookPrice (divide (minus 100 bookDiscount) 100))
                                    2}}</p>
                                <p class="text-muted"><s>{{bookPrice}}</s></p>
                            </div>
                        </div>
                        <div class="card-body d-flex justify-content-center pt-0">
                            <button type="button" class="btn btn-danger" onclick="addToCart('{{basename _links.book.href}}', event)"><i
                                    class="fas fa-cart-plus me-2"></i></i>Add to cart</button>
                        </div>
                    </a>
                </div>
            </section>
            {{/each}}
        </div>
    </div>

    <!-- Fun 2 -->
    <div class="m-5">
        <div class="row d-flex justify-content-center">
            {{!-- <div class="col"> --}}
                <img src="../imgs/static/fun-2.jpg" alt="Image">
            {{!-- </div> --}}
        </div>
    </div>

    <!-- Sub -->
    <div class="container text-primary">
        <div class="row p-4 border border-primary pb-1 mb-5">
            <div class="col-12 col-md-6">
                <b class="h5"><b>SIGN UP FOR NOTIFICATIONS</b></b> <br>
                <p class="mt-2">Enter your email to receive infomation about<br>events and attractive offers !!</p>
            </div>
            <div class="col-12 col-md-6 my-3">
                <form action="" class="d-flex align-items-center">
                    <input type="text" placeholder="Enter your email" class="form-control">
                    <input type="submit" value="Confirm" class="btn btn-success ms-2">
                </form>
            </div>
        </div>
    </div>
</div>
