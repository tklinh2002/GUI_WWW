        {{!-- method payment --}}
        <div class="border p-4 mt-4">
            <div>Payment method</div>
            <div class="form-check d-flex align-items-center">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1"
                    style=" -align: middle;">
                <label class="form-check-label ms-3" for="flexRadioDefault1">
                    <img src="./imgs/static/momo.png" height="50px" /> Momo Wallet
                </label>
            </div>
            <div class="form-check d-flex align-items-center">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                <label class="form-check-label ms-3" for="flexRadioDefault2">
                    <img src="./imgs/static/cast.jpg" height="50px" /> Cast
                </label>
            </div>
        </div>
        {{!-- End: Method payment --}}

        <div class="form-group mt-4">
            <label for="note">Note:</label>
            <textarea class="form-control" rows="5" id="txtNoteOrder" name="note" placeholder="Message for Leaf Book here ..."
                id="note"></textarea>
        </div>

        <div class="form-group mt-4">
            <label for="voucher">Voucher:</label>
            <input type="text" class="form-control" id="voucher" oninput="this.value = this.value.toUpperCase()"
